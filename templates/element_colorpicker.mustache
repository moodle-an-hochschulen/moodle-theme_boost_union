{{!
    @template theme_boost_union/element_colorpicker

    Template for the form element wrapper template.

    Example context (json):
    {
        "label": "Course full name",
        "type": "text"
    }
}}

<div id="fitem_{{id}}" class="form-group row  fitem">
    <div class="col-md-3 col-form-label d-flex pb-0 pr-md-0">
        <label id="{{id}}_label" class="d-inline word-break " for="{{id}}">
            {{{label}}}
        </label>
        <div class="form-label-addon d-flex align-items-center align-self-start">
        </div>
    </div>
    <div class="col-md-9 form-inline align-items-start felement" data-fieldtype="{{type}}">
        {{{colorpicker}}}
    </div>
</div>
