{{!
    @template theme_boost_union/full_header-chunk-coursefields

    This template renders the course custom fields for enhanced course headers.

    Example context (json):
    {
        "hascustomfields": true,
        "customfields": "<div>Field content</div>",
        "customfieldsstyleasbadge": true
    }
}}
{{#hascustomfields}}
    {{#customfieldsstyleasbadge}}
        <div class="d-flex me-auto bg-light p-2 pe-0 bg-opacity-75 border rounded">
            <div class="customfields">
                {{{customfields}}}
            </div>
        </div>
    {{/customfieldsstyleasbadge}}
    {{^customfieldsstyleasbadge}}
        <div class="d-flex me-auto bg-light px-2 py-1 bg-opacity-75 small rounded courseheadersticker align-self-end text-dark">
            <div class="customfields">
                {{{customfields}}}
            </div>
        </div>
    {{/customfieldsstyleasbadge}}
{{/hascustomfields}}
