{{!
    @template theme_boost_union/progress-bar

    This template renders a simple progress bar.
    This is a modified version of block_myoverview/progress-bar.

    Example context (json):
    {
        "progress": 50
    }
}}
<div class="progress-text w-100">
    <span class="visually-hidden">{{#str}}aria:courseprogress, block_myoverview{{/str}}</span>
    <div class="progress">
        <div class="progress-bar bg-primary" role="progressbar" aria-valuenow="{{progress}}" style="width: {{progress}}%" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <div class="small mt-1">
        {{#str}}completepercent, block_myoverview, <span>{{progress}}</span>{{/str}}
    </div>
</div>
