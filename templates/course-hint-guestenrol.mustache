{{!
    @template theme_boost_union/course-hint-guestenrol

    Boost Union template for outputting the guestenrol course hint.

    Context variables required for this template:
    * courseid - The course ID
    * guestauthenabled - The fact if guest authentication is enabled or not
    * showenrolsettingslink - The fact if a link to the enrolment settings should be shown or not

    Example context (json):
    {
        "courseid": "123",
        "showenrolsettingslink": true
    }
}}
<div class="course-hint-guestenrol alert alert-info">
    <div class="d-flex">
        <div class="flex-shrink-0 me-3 icon-size-5"><i class="fa fa-exclamation-circle fa-3x"></i></div>
        <div class="flex-grow-1 align-self-center">
            {{#str}} showhintcourseguestenrolhint, theme_boost_union, { "courseid": "{{courseid}}" } {{/str}}
            {{#guestauthenabled}}
                {{#str}} showhintcourseguestenroleveryone, theme_boost_union, { "courseid": "{{courseid}}" } {{/str}}
            {{/guestauthenabled}}
            {{^guestauthenabled}}
                {{#str}} showhintcourseguestenrolauthonly, theme_boost_union, { "courseid": "{{courseid}}" } {{/str}}
            {{/guestauthenabled}}
            {{#showenrolsettingslink}}
                <br>{{#str}} showhintcourseguestenrolcallforaction, theme_boost_union, { "url": "{{config.wwwroot}}/enrol/instances.php?id={{courseid}}", "courseid": "{{courseid}}" } {{/str}}
            {{/showenrolsettingslink}}
        </div>
    </div>
</div>
